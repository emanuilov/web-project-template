	"main": "./dist/index.html",
	"lint-staged": {
		"./src/js/**/*.js": [
			"yarn gulp lint-js",
			"yarn gulp test-js",
			"git add"
		],
		"./src/**/*.php": [
			"yarn gulp lint-php",
			"yarn gulp test-php",
			"git add"
		],
		"./src/sass/**/*.scss": [
			"yarn gulp lint-scss",
			"git add"
		],
		"./src/**/*.html": [
			"yarn gulp lint-html",
			"git add"
		]
	},
	"scripts": {
		"precommit": "lint-staged",
		"jest:update": "jest --updateSnapshot",
		"jest:watch": "jest --watch",
		"jest:debug": "node --inspect-brk node_modules/.bin/jest -c jest.config.js --runInBand"
	},
